{
  "name": "@revisium/client",
  "version": "0.1.0-alpha.1",
  "description": "TypeScript HTTP client for Revisium REST API",
  "keywords": [
    "revisium",
    "client",
    "rest-api",
    "typescript",
    "headless-cms"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revisium/revisium-client.git"
  },
  "license": "MIT",
  "author": "Anton Kashirov",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && npm run build:dts",
    "build:dts": "tsc -p tsconfig.build.json",
    "dev": "tsdown --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns='integration'",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern='integration' --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --silent --testPathIgnorePatterns='integration'",
    "test:integration:up": "docker compose -f docker-compose.tests.yml -p test-revisium-client up --wait -d",
    "test:integration:down": "docker compose -f docker-compose.tests.yml -p test-revisium-client down -v",
    "lint:ci": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "tsc": "tsc --noEmit",
    "generate": "openapi-ts",
    "generate:download": "curl -o specs/openapi.json https://cloud.dev.revisium.io/api-json && npm run generate",
    "prepublishOnly": "npm run build && npm run tsc"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@hey-api/openapi-ts": "^0.92.3",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.7",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsdown": "^0.20.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
